@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <!-- You can add custom fields here -->
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
	            <label asp-for="Input.RegistrationCode">Registration Code</label>
	            <input asp-for="Input.RegistrationCode" class="form-control" />
	            <span asp-validation-for="Input.RegistrationCode" class="text-danger"></span>
	            <small class="form-text text-muted">
		            Enter the registration code provided by your sales rep agency.
	            </small>
            </div>

            <div class="form-group" id="regionDropdownGroup" style="display:none;">
	            <label asp-for="Input.Region"></label>
	            <select asp-for="Input.Region" asp-items="Model.RegionOptions" class="form-control" id="Input_Region">
		            <option value="">-- Select Region --</option>
	            </select>
	            <span asp-validation-for="Input.Region" class="text-danger"></span>
            </div>
            

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
           
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                          
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- only if not already loaded -->

	<script>
        const activeRegistrationCodes = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ActiveRegistrationCodes));

        $(document).ready(function () {
            function toggleRegionDropdown() {
                const enteredCode = $('#Input_RegistrationCode').val().trim();
                const matchedCode = activeRegistrationCodes.find(c => c.RegistrationCode === enteredCode);

                if (matchedCode && matchedCode.RepCode === 'LAW') {
                    $('#regionDropdownGroup').show();
                    $('#Input_Region').prop('disabled', false).prop('required', true);
                } else {
                    $('#regionDropdownGroup').hide();
                    $('#Input_Region').prop('disabled', true).prop('required', false).val('');
                }
            }

            toggleRegionDropdown(); // initial check on page load

            $('#Input_RegistrationCode').on('input', toggleRegionDropdown);
        });
    </script>
}

